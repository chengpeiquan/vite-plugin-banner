{
  "extends": "@bassist/tsconfig/base.json",
  "compilerOptions": {
    "importHelpers": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "jest"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declaration": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
